{
  "display": "Node 16",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "src/dist",
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2021",
  },
  "exclude": ["node_modules", "tmp"]
}
